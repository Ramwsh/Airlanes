<Window
    x:Class="Airlanes.View.RouteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Airlanes.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RouteView"
    Width="1280"
    Height="720"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Width="1280"
            Height="45"
            VerticalAlignment="Top"
            Background="#3498DB">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontFamily="Segoe UI Variable Text Semilight"
                    FontSize="24"
                    Foreground="White"
                    Text="Система управления авиалиниями" />
                <Button
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Margin="0,2.5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="PaleVioletRed"
                    BorderBrush="Red"
                    BorderThickness="1" />
            </Grid>
        </StackPanel>
        <StackPanel
            Width="1280"
            Height="675"
            VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Width="200"
                    Height="675"
                    Background="LightGray"
                    Orientation="Vertical">
                    <TextBlock
                        Background="#ECF0F1"
                        FontSize="36"
                        Foreground="Black"
                        Text="Разделы:"
                        TextAlignment="Center" />
                    <Button
                        Margin="0,5,0,0"
                        Background="#ECF0F1"
                        Content="Самолёт"
                        FontFamily="Segoe UI Variable Text Semilight"
                        FontSize="32"
                        Foreground="Black" />
                    <Button
                        Margin="0,5,0,0"
                        Background="#ECF0F1"
                        Content="Капитан"
                        FontFamily="Segoe UI Variable Text Semilight"
                        FontSize="32"
                        Foreground="Black" />
                    <Button
                        Margin="0,5,0,0"
                        Background="#ECF0F1"
                        Content="Пассажир"
                        FontFamily="Segoe UI Variable Text Semilight"
                        FontSize="32"
                        Foreground="Black" />
                    <Button
                        Margin="0,5,0,0"
                        Background="#ECF0F1"
                        Content="Маршрут"
                        FontFamily="Segoe UI Variable Text Semilight"
                        FontSize="32"
                        Foreground="Black" />
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Height="45"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontFamily="Segoe UI Variable Text Semilight"
                        FontSize="32"
                        Text="Рейсы"
                        TextAlignment="Right" />
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Height="625"
                    VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <DataGrid
                                Width="720"
                                Height="600"
                                Background="LightGray"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="16"
                                Foreground="Black"
                                ItemsSource="{Binding Routes}"
                                SelectedItem="{Binding SelectedRoute}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            Width="325"
                            Height="600"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="LightGray"
                            Orientation="Vertical">

                            <TextBlock
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="32"
                                Foreground="Black"
                                Text="Управление таблицей"
                                TextAlignment="Center" />

                            <Button
                                Width="300"
                                Command="{Binding CreateRouteCommand}"
                                Content="Создать"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="32"
                                Foreground="DarkBlue" />

                            <Button
                                Width="300"
                                Margin="0,5,0,0"
                                Command="{Binding DeleteRouteCommand}"
                                Content="Удалить"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="32"
                                Foreground="PaleVioletRed" />

                            <Button
                                Width="300"
                                Margin="0,5,0,0"
                                Command="{Binding UpdateRouteCommand}"
                                Content="Изменить"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Goldenrod" />
                            <TextBlock
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="Номер маршрута"
                                TextAlignment="Center" />
                            <TextBox
                                Width="300"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="{Binding NumberOfRoute}"
                                TextAlignment="Center" />
                            <TextBlock
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="Аэропорт вылета"
                                TextAlignment="Center" />
                            <TextBox
                                Width="300"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="{Binding DepartureAirport}"
                                TextAlignment="Center" />
                            <TextBlock
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="Аэропорт назначения"
                                TextAlignment="Center" />
                            <TextBox
                                Width="300"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="{Binding DestinationAirport}"
                                TextAlignment="Center" />
                            <TextBlock
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="Цена"
                                TextAlignment="Center" />
                            <TextBox
                                Width="300"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="{Binding Price}"
                                TextAlignment="Center" />
                            <TextBlock
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="Величина полёта"
                                TextAlignment="Center" />
                            <TextBox
                                Width="300"
                                FontFamily="Segoe UI Variable Text Semilight"
                                FontSize="26"
                                Foreground="Black"
                                Text="{Binding FlightDuration}"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
